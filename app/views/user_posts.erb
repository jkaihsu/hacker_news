<div id='container'>
  <div id='header'>
    <h1><%= @the_user.full_name %>'s Posts</h1>
  </div>
  <div id='posts'>
    <% @the_user.posts.each do |post| %>
    <div id='post'>
      <h4><a href='/post/<%= post.id %>'><%= post.title %></a></h4>
      <h5><%= post.created_at %></h5>
      <p><%= post.body %></p>
    </div>
    <% end %>
  </div>
</div>